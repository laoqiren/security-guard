<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>测试shtml</title>
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <h1>测试shtml</h1>
    <textarea id="rich" rows=20 cols=30>
    </textarea>
    <button id="submit">提交</button>
    <div id="show"></div>
    <script>
        $('#submit').on('click', e => {
            $.ajax({
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify({
                    text: $('#rich').val()
                }),
                success(res) {
                    console.log(res)
                    $('#show').html(res);
                }
            });
        });
    </script>
</body>
</html>